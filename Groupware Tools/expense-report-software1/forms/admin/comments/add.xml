<form>
	<title>Add / Edit Comment</title>
	<action>index.php?sub=comments&action=store</action>
	<name>edit</name>
	<width>540</width>

	<formtag>true</formtag>
	<border>true</border>

	<vars>
		<report import="$_GET[comment_report] ? $_GET[comment_report] : $_POST[comment_report]" type="eval" />
	</vars>
	
	<buttons>		
		<set>
			<footer>true</footer>
			<header>true</header>
		</set>

		<return onclick="" button="return" >
			<location>index.php?sub=reports&action=details&report_id={REPORT}</location>
		</return>

		<save onclick="" button="saveall">
			<location>javascript:document.forms[0].submit();</location>
		</save>

	</buttons>

	<redirect>index.php?sub=reports&action=details&report_id={COMMENT_REPORT}</redirect>

	<fields>

		<comment_id type="hidden" hidden="true"/>
		<comment_date type="hidden" hidden="true"/>
		<comment_report type="hidden" default="$_GET[comment_report]" action="eval" />

		<comment_title type="textbox" size="40:100" required="true" validate="A:1:100">
			<title>Title</title>
			<description>Enter the title for this comment.</description>
		</comment_title>

		<comment_body type="textarea" size="40:4">
			<title>Body</title>
		</comment_body>
	</fields>
</form>
