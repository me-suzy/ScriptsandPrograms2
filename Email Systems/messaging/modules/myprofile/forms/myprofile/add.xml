<form>
	<title>{PRIVATE.FORM_ACTION_TITLE} My Profile</title>
	<action>index.php?mod=myprofile&sub=myprofile.account&action=store</action>
	<name>edit</name>
	<width>580</width>
	<encoding>multipart/form-data</encoding>

	<formtag>true</formtag>
	<border>true</border>
	
	<buttons>		
		<set>
			<footer>true</footer>
			<header>true</header>
		</set>

		<return onclick="" button="return">
			<location>{PRIVATE.FORM_PREVIOUS_PAGE}</location>
		</return>

		<save onclick="" button="saveall">
			<location>javascript:document.forms[0].submit();</location>
		</save>

	</buttons>

	<redirect>index.php?mod=myprofile&sub=myprofile&action=details&user_id={USER_ID}</redirect>

	<vars>	
		<action_title import="($_GET[user_id] || $_POST[user_id] )? 'Edit' : 'Add'" type="eval" />
	</vars>

	<fields>
		<user_id type="hidden" hidden="true"/>
		<user_date type="hidden" default="time()" action="eval"/>

		<user_name type="textbox" size="30" required="true" validate="A:2:100"> 
			<title>Name</title>
		</user_name>

		<user_password type="password" size="20" required="true" validate="A:2:100"> 
			<title>Password</title>
		</user_password>

		<user_password_confirm type="password" size="20" required="true" validate="A:2:100"> 
			<title>Confirm</title>
		</user_password_confirm>

		<user_email type="textbox" size="30" unique="true" required="true" validate="E:2:100"> 
			<title>Email </title>
		</user_email>

		<user_email2 type="textbox" size="30"> 
			<title>Secondary Email </title>
		</user_email2>


		<subtitle type="subtitle" title="Contact Info" />

		<user_address type="textbox" size="40"> 
			<title>Address</title>
		</user_address>

		<user_city type="textbox" size="20"> 
			<title>City</title>
		</user_city>

		<user_state type="USstates" empty="true"> 
			<title>State</title>
		</user_state>

		<user_zip type="textbox" size="15"> 
			<title>Zip Code</title>
		</user_zip>

		<user_country type="countries" empty="true"> 
			<title>Country</title>
		</user_country>

		<user_phone type="textbox" size="20"> 
			<title>Phone</title>
		</user_phone>

		<subtitle2 title="Instant Messengers" type="subtitle" />
		
		<user_im_aol type="textbox" size="20">
			<title>AOL</title>
		</user_im_aol>

		<user_im_icq type="textbox" size="20">
			<title>ICQ</title>
		</user_im_icq>

		<user_im_msn type="textbox" size="20">
			<title>MSN</title>
		</user_im_msn>

		<user_im_yahoo type="textbox" size="20">
			<title>Yahoo</title>
		</user_im_yahoo>

		<user_im_other type="textbox" size="30">
			<title>Other</title>
		</user_im_other>

		<subtitle3 type="subtitle" title="Messaging Settings" />
		<user_msg_send type="droplist">
			<title>Send Notice</title>
			<description>Select if you want to receive by email a notice each time an user sends you a message using the admin panel.</description>

			<options>
				<option name="0">no</option>
				<option name="1">yes</option>
			</options>
		</user_msg_send>

		<user_msg_subject type="textbox" size="40" default="New Message">
			<title>Email Subject</title>
			<description>Enter the subject you want to have the notice sent to you.</description>
		</user_msg_subject>

  	</fields>
</form>
